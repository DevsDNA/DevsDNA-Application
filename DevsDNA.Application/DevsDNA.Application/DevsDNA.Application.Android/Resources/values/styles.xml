<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="MainTheme" parent="MainTheme.Base">
	</style>
	<!-- Base theme applied no matter what API -->
	<style name="MainTheme.Base" parent="Theme.AppCompat.Light">
		<!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
		<item name="windowNoTitle">true</item>
		<!--We will be using the toolbar so no need to show ActionBar-->
		<item name="windowActionBar">false</item>
		<!-- Set theme colors from https://aka.ms/material-colors -->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">#1d1d54</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">#1d1d54</item>
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="colorAccent">#292969</item>
		<!-- Used to for the title of the Toolbar -->
		<item name="android:textColorPrimary">#1d1d54</item>
		<!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
		<item name="android:textColorPrimaryInverse">#fff</item>
		<!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
		<item name="windowActionModeOverlay">true</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:alertDialogTheme">@style/DialogWindowTitle</item>
	</style>

	<style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/splashscreen</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowTranslucentNavigation">false</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">#1d1d54</item>
	</style>

	<style name="DialogWindowTitle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorPrimaryDark">#1d1d54</item>
		<item name="android:textColorPrimary">#1d1d54</item>
		<item name="android:textColorPrimaryInverse">#fff</item>
		<item name="android:textColor">#1d1d54</item>
		<item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>
